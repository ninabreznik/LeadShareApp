+below(1000px)
  /* :::::::::::: APPLICATION.html.erb => menu buttons & login :::::::::::: */
  body
    margin 0px
    padding 0px
    .top_menu_bar
      position fixed
      top 0
      z-index 999
      width 100%
      background-color Menu-Top-Color
      blur-mixin(intensity =  0px)
      background: rgb(0, 0, 0); /* fallback color */
      background: rgba(255, 255, 255, 0.8);
      border-bottom 1px solid #ccc
      padding-top 3px
      font-family App-Font-Family
      .publish_project,
      .find-provider,
      .messages
        padding-bottom 2px
        font-size 11px
        -webkit-font-smoothing: antialiased
        font-weight bold
        display inline-block
      .publish_project
        shift 0.52
        button(Lead-Orange-dark)
        padding 8px 15px
        bottom 8px
        &:hover
          opacity 0.7
          transition color .1s
        a
          text-decoration none
          color Menu-Top-Button-Color
          font-size 11px
      .find_provider
        shift 0.5
        button(black)
        padding 8px 15px
        bottom 8px
        margin-left 4px
        &:hover
          opacity 0.7
          transition color .1s
        a
          text-decoration none
          color white
          font-size 11px
      .messages
        shift(0.18)
        font-size 22px
        a
          text-decoration none
          color Menu-Top-Button-Color
      .logo
        top 6px
        bottom 6px
        shift(0.04)
        height 35px
        display inline-block
        &:hover
          opacity 0.7
          transition color .1s
      .select_bar
        shift(0.4)
        display: inline-block;
        width: 150px;
        height: 20px;
        padding: 3px 6px;
        margin-bottom: 10px;
        font-size: 12px;
        line-height: 20px;
        color: #606060;
        vertical-align: middle;
        border: 0px
      .menu_bar_login
        shift(0.4)
        button(white)
        padding 8px 15px
        border 1px solid #606060
        bottom 8px
        &:hover
          opacity 0.7
          transition color .1s
        a
          text-decoration none
          color Menu-Top-Button-Color
          font-size 11px
      .info
        padding-bottom 2px
        shift(0.63)
        font-size 21px
        display inline-block
        .fa.fa-info-circle
          color Offer-Font-Color
          &:hover
            opacity 0.7
            transition color .1s
