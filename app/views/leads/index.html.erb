<div class="body_leads_index">

<div class="columns">

<ul class="wookmark">
<% if @leads.present? %>
  <% @sorted_leads.each do |lead| %>
    <div class="lead_box">
      <div class ="lead_title">
        <%= link_to "#{lead.business_type}", lead_path(lead) %> 
      </div>
      <div class="lead_body">
        <div class="lead_subtitle"><%= I18n.t'leadsindex-lead.location' %>:</div>     
          <%= lead.location %>   <br>
        <div class="lead_subtitle"><%= I18n.t'leadsindex-lead.zip' %>:</div>          
          <%= lead.zip %>        <br>
        <div class="lead_subtitle"><%= I18n.t'leadsindex-lead.time' %>:</div>         
          <%= lead.time %>       <br>
        <div class="lead_subtitle"><%= I18n.t'leadsindex-lead.description' %>:</div>  
          <%= lead.description %><br>
        <div class="lead_subtitle"><%= I18n.t'leadsindex-lead.name' %>:</div>        
          <%= lead.name %>       <br>
        <div class="lead_subtitle"> Aktualizirano:</div>        
          <%= lead.updated_at.strftime("%d.%m.%Y") %> <br>
        <% if user_signed_in? %>
          <% if @paid_leads %>
            <div class="lead_subtitle">Stranko ste že kontaktirali.</div>   
          <% else %>     
            <div class="lead_subtitle"> Št.zakupov:</div>
            <%= lead.reverse_orders.where(paid: true).count %> <br>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
</ul>
</div>
<div class="leads_index_no_leads_available">
  <%= I18n.t'leadsindex-notification.no-leads-available' %>
</div>
<% end %>
</div>
<script type="text/javascript">
    var leadboxes = document.querySelectorAll('.lead_box');
    for(var i = 0; i < leadboxes.length; i++) {
      (function leadbox (ID) {
        leadboxes[ID].addEventListener('click', function onClick (event) {
          var leadpath =leadboxes[ID].querySelector('a').getAttribute('href');
          window.location.href = leadpath;
        });
      })(i);
    }
</script>


