<div class="payment_buttons_choose_payment_text">
  <%= I18n.t'ordersshow-payment-buttons.choose-payment-text' %>:
</div>
<!--
########################################
PayPal/Merchant Services/BuyNowButtons
########################################
-->
<div class="order_show_buy_buttons">
<div class="order_show_buy">
  <%= link_to "#{I18n.t'ordersshow-payment-buttons.paypal-checkout'}",
              @order.paypal_url(order_path(@order), paypal_notifications_url)
  %>
</div>


<!--
########################################
BankPayment
########################################
-->
<div class="order_show_buy">
  <%= link_to(
            "#{I18n.t'ordersshow-payment-buttons.bank-transfer'}",
            {
              :controller => 'orders',
              :action => 'bank_transaction',
              :id => @order.id
              },
            :html =>
            {
              :method => :get,
              :remote => true
            }
           ) %>
</div>

<!--
########################################
Wallet
########################################
-->
<% if @lead.selectors.where(id: current_user.id).first.wallet >= 35 %>
  <div class="order_show_buy">
    <%= link_to(
  "#{I18n.t'ordersshow-payment-buttons.wallet'}",
  {
    :controller => 'orders',
    :action => 'edit',
    :id => @lead.reverse_orders.where(selector_id: current_user.id).first.id
    },
  :html =>
  {
    :method => :patch,
    :remote => true
  }
  ) %>
</div>
<% else %>
  <div class="order_show_buy">
  <%= link_to(
            "#{I18n.t'ordersshow-payment-buttons.wallet'}",
            {
              :controller => 'orders',
              :action => 'wallet_payment_from_lead',
              :id => @order.id
              },
            :html =>
            {
              :method => :get,
              :remote => true
            }
           ) %>
</div>


<% end %>
</div>

