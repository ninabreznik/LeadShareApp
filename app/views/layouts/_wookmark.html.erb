<script type="text/javascript">
  (function ($){
    var handler = $('.lead_box');
    var options = {
        // Prepare layout options.
        autoResize: true, // This will auto-update the layout when the browser window is resized.
        container: $('.columns'), // Optional, used for some extra CSS styling
        offset: 5, // Optional, the distance between grid items
        outerOffset: 5, // Optional, the distance to the containers border
        itemWidth: 500 // Optional, the width of a grid item
    };

    handler.wookmark(options);
    setTimeout(function() {
        handler.each(function(index,element) {
            var image = element.querySelector("img");
            var newHeight = $(image).height();
            image.setAttribute("height", newHeight);
        });
        handler.wookmark(options);
    }, 200);

  })(jQuery);
</script>



