<div class="top_menu_bar">
  <a href="<%= root_path %>"><%= image_tag 'sosed.biz.png', :class => 'logo' %></a>
  <% if user_signed_in? %>
    <% if current_user.affiliator == 't' %>
    <div class="menu_bar_login">
      <%= link_to "My profile", dashboard_path %>
    </div>
    <div class="find_provider">
      <%= link_to "#{I18n.t'top-menu.find-provider'}", find_professional_path %>
    </div>
    <div class="publish_project">
      <%= link_to "AFFILIATE PROGRAM", affiliate_program_path %>
    </div>
    <% else %>
        <div class="menu_bar_login">
          <%= link_to "My profile", dashboard_path %>
        </div>
        <div class="find_provider">
          <%= link_to "FIND A PRO", find_professional_path %>
        </div>
        <div class="publish_project">
          <%= link_to "UPDATE A PORTFOLIO", new_project_path %>
        </div>
        <div class="messages">
          <%= link_to messages_path do %>
            <i class="fa fa-envelope"></i>
          <% end %>
        </div>
    <% end %>
  <% else %>
      <div class="menu_bar_login">
        <%= link_to "LOGIN", new_user_session_path %>
      </div>
      <div class="find_provider">
        <%= link_to "Join as a Pro", membership_path %>
      </div>
      <div class="publish_project">
        <%= link_to "FIND A PRO", new_lead_path %>
      </div>
  <% end %>

</div>
