<div class="top_menu_bar">
  <a href="<%= root_path %>"><%= image_tag 'sosed.biz.png', :class => 'logo' %></a>
  <% if user_signed_in? %>
      <div class="menu_bar_login">
        <%= link_to "#{current_user.email.split('@').first}", dashboard_path %>
      </div>
      <div class="find_provider">
        <%= link_to "#{I18n.t'top-menu.find-provider'}", find_professional_path %>
      </div>
      <div class="publish_project">
        <%= link_to "#{I18n.t'top-menu.publish-project'}", new_project_path %>
      </div>
      <div class="messages">
        <%= link_to messages_path do %>
          <i class="fa fa-envelope"></i>
        <% end %>
      </div>
  <% else %>
      <div class="menu_bar_login">
        <%= link_to "Log In", new_user_session_path %>
      </div>
      <div class="find_provider">
        <%= link_to "ABOUT", info_path %>
      </div>
      <div class="publish_project">
        <%= link_to "FIND AND HIRE", new_lead_path %>
      </div>
  <% end %>


  <script>
    document.getElementById("menu_bar_select").onchange = function() {
        if (this.selectedIndex!==0) {
            window.location.href = this.value;
        }
    };
  </script>

</div>
