<%= content_tag_for(:div, conversation) do |conversation| %>

      <%= link_to conversation.subject, conversation_path(conversation), target: :chat_window %>
    <br> <%= conversation.updated_at.strftime("%d.%m. ob %H:%M") %>
    |
    <% if conversation.is_completely_trashed?(current_user) %>
      <%= link_to '<i class="fa fa-undo"></i>'.html_safe, untrash_conversation_path(conversation), method: :post %>
    <% else %>
      <%= link_to '<i class="fa fa-archive"></i>'.html_safe, trash_conversation_path(conversation), method: :post %>
    <% end %>
<% end %>
