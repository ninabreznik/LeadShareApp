<div class="body_conversations">
  <!-- <div class="conversations_title"><i class="fa fa-envelope"></i></div> -->
  <div class="conversations_wrapper">

    <div class="conversations_inbox_title">Prejeta sporočila</div>
    <div class="conversations_inbox_list">
      <%= render collection: mailbox.inbox, partial: 'conversation' %>
    </div>

    <% if @first_message %>
      <div class="conversations_sent_title">Poslana sporočila</div>
      <div class="conversations_sent_list">
        <%= render collection: mailbox.sentbox, partial: 'conversation' %>
      </div>
    <% else %>
    <% end %>
  </div>
  <iframe src="<%= first_message_path %>" name="chat_window" id="chat_window_iframe"></iframe>
</div>


