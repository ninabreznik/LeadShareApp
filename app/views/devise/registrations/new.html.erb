
<div class="body_devise_signup">
<div class="signup">
  <!-- SIGNUP FOR PROVIDERS -->
  <div class="signup_title">
    I want to grow my business!<br>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="signup_form_email">
      Respond to customer requests and get hired
    </div>
    <br>
    <br>
    <div class="signup_form_email"><%= f.label :"#{I18n.t'users-signup.email'}" %><br />
    <%= f.email_field :email, autofocus: true %></div>
    <div class="signup_form_password"><%= f.label :"#{I18n.t'users-signup.password'}" %> <% if @validatable %><i>(<%= @minimum_password_length %> <%= I18n.t'users-signup.minimal-char' %>)</i><% end %><br />
      <%= f.password_field :password, autocomplete: "off" %></div>
    <div class="signup_form_password_confirmation"><%= f.label :"#{I18n.t'users-signup.password-confirmation'}" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
    <div class="signup_form_email">
    <%= f.hidden_field :provider, value: "provider" %></div>
    <div class="signup_form_submit"><%= f.submit "#{I18n.t'users-signup.signup_button'}" %></div>
  <% end %><br><br>
  <div class="signup_shared_links">
    <%= render "devise/shared/links" %>
  </div>
  <br>
  <br />
  <div class="signup_title">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
      You can also sign in with  <%= link_to "FACEBOOK", omniauth_authorize_path(resource_name, provider) %><br>
      <% end -%>
    <% end -%>
  </div>
</div>

