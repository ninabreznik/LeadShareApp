<div class="body_devise_password_new">
  <div class="password_new">
<div class="password_new_title">
  Spremenite geslo
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="password_new_form_email">
    <%= f.label :password, "Novo geslo" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %></div>

  <div class="password_new_form_submit"><%= f.submit "Spremenite geslo" %></div>
<% end %>

<div class="password_new_shared_links">
  <%= render "devise/shared/links" %>
</div>
</div>

</div>
